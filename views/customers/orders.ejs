<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Your Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style1.css">
</head>

<body>

    <div class="orders-main-div">
        <%- include("../components/header.ejs") %>
        <% if (orders.length == 0) { %>
            <div class="no-orders-wrapper">
                <div class="no-order-div">
                    <p class="no-order-text">No orders found!</p>
                    <img class="no-order-img" src="/images/blank.svg" alt="blank">
                </div>
            </div>
        <% } else { %>
            <div class="orders-wrapper">
                <p class="all-orders-text">All Orders</p>
                <div class="show-orders">
                    <table class="table orders-table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Orders</th>
                                <th scope="col">Contact</th>
                                <th scope="col">Address</th>
                                <th scope="col">Placed At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% const allOrders = orders.reverse() %>
                            <% allOrders.forEach((order) => { %>
                                <tr>
                                    <td>
                                        <a class="order-id-a" href="/track-order/<%= order._id %>"><%= order._id %></a>
                                    </td>
                                    <td><%= order.phone %></td>
                                    <td><%= order.address %></td>
                                    <td><%= moment(order.createdAt).format("hh:mm A") %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <script>
        window.onload = () => {
            const navLinks = document.querySelectorAll(".nav-link");
            for (let i = 0; i < navLinks.length; i++) {
                if (navLinks[i].getAttribute("href") == "/orders") {
                    navLinks[i].classList.add("active");
                    break;
                }
            }
        };        
    </script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>